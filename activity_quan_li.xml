<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuanLiActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarquanli"
        app:title="Quản lí"
        android:background="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintTop_toBottomOf="@id/toolbarquanli">
       <com.borutsky.neumorphism.NeumorphicFrameLayout
           android:id="@+id/firstBlock"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_marginTop="50dp"
           android:layout_marginBottom="30dp"
           app:corner_radius="20dp"
           app:shape="rectangle">
           <LinearLayout
               android:padding="5dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
           <androidx.appcompat.widget.AppCompatImageView
               android:layout_gravity="center"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/iconcong">
           </androidx.appcompat.widget.AppCompatImageView>
           <TextView
               android:text="Thêm"
               android:textSize="18sp"
               android:textStyle="bold"
               android:layout_marginTop="5dp"
               android:layout_gravity="center"
               android:textColor="@android:color/holo_red_light"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
           </TextView>
           </LinearLayout>
       </com.borutsky.neumorphism.NeumorphicFrameLayout>
       <com.borutsky.neumorphism.NeumorphicFrameLayout
           android:id="@+id/suaneu"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_marginTop="50dp"
           android:layout_marginBottom="30dp"
           app:corner_radius="20dp"
           app:shape="rectangle">
           <LinearLayout
               android:padding="5dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <androidx.appcompat.widget.AppCompatImageView
                   android:layout_gravity="center"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/iconsua">
               </androidx.appcompat.widget.AppCompatImageView>
               <TextView
                   android:text="Sửa"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_marginTop="5dp"
                   android:layout_gravity="center"
                   android:textColor="@android:color/holo_red_light"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
               </TextView>
           </LinearLayout>
       </com.borutsky.neumorphism.NeumorphicFrameLayout>
       <com.borutsky.neumorphism.NeumorphicFrameLayout
           android:id="@+id/xoanNeu"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_marginTop="50dp"
           android:layout_marginBottom="30dp"
           app:corner_radius="20dp"
           app:shape="rectangle">
           <LinearLayout
               android:padding="5dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <androidx.appcompat.widget.AppCompatImageView
                   android:layout_gravity="center"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/iconxoa">
               </androidx.appcompat.widget.AppCompatImageView>
               <TextView
                   android:text="Xóa"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_marginTop="5dp"
                   android:layout_gravity="center"
                   android:textColor="@android:color/holo_red_light"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
               </TextView>
           </LinearLayout>
       </com.borutsky.neumorphism.NeumorphicFrameLayout>

   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>